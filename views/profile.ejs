<%include partials/header%>
<%- include('partials/navbar', {active: "profile"}); %>

<link rel="stylesheet" href="/css/profile.css">

<html>
<div class="container-fluid">

    <div class="row">

        <div class="col-md-4">
            <div class="container-fluid profile-Container">
                <div class="row my-2" id="profileBanner">
                    <img src="http://localhost:3000/user_profile_images/<%=user.user_profile[0].profile_pic%>"
                        class="mx-auto d-block profilePic">
                </div>
                <div class="row my-4">
                    <div class="col">
                        <div class="row-4"> <strong><%=user.name%> </strong></div>
                        <div class="row-4"><%=user.user_profile[0].location%></div>
                        <div class="row-2"><%=user.username%></div>
                        <div class="row-2"><span>Record: </span><%=user.wins%>-<%=user.losses%></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="container-fluid mt-2 orange3">
                <div class="container">
                    <ul class="nav nav-pills center-pills">
                        <li class="active">
                            <a data-toggle="tab" href="#">Open Challenges</a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#">Past Challenges</a>
                        </li>
                    </ul>
                </div>
                <!--POSTS-->
                <ul class="list-group">
                    <%user.closed_bets.reverse().forEach(function(bet){ %>
                        <li class="feedItem">
                            <article class="container-fluid border rounded border-dark shadow-lg md-0">
                                <div class="row">
                                    <div class="col">
                                        <%if(bet.win){ %>
                                            <img src="http://localhost:3000/user_profile_images/<%=user.user_profile[0].profile_pic%>" width="40" height="40"
                                                class="rounded-circle img-fluid" />
                                            <strong class="feedName"><%=user.name%></strong>
                                            <span class="wonVS"> won vs. </span>
                                            <strong class="feedName"><%=bet.challenger_name%></strong>
                                            <img src="http://localhost:3000/user_profile_images/<%=bet.profile_pic%>" width="40" height="40"
                                                class="rounded-circle img-fluid" />
                                        <%}%>
                                        <%else{ %>
                                            <img src="http://localhost:3000/user_profile_images/<%=user.user_profile[0].profile_pic%>" width="40" height="40"
                                                class="rounded-circle img-fluid" />
                                            <strong class="feedName"><%=user.name%></strong>
                                            <span class="wonVS"> lost to </span>
                                            <strong class="feedName"><%=bet.challenger_name%></strong>
                                            <img src="http://localhost:3000/user_profile_images/<%=bet.profile_pic%>" width="40" height="40"
                                                class="rounded-circle img-fluid" />
                                        <%}%>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col text-right" id="timestamp">
                                        <span class="text-right timestamp"><%=bet.bet_data%></span></div>
                                </div>
                                <div class="row" id="feedItemMedia">
                                    <div class="col-sm-4" id="feedItemMediaColumn">
                                        <img src="../assets/MacKidBeatdown.gif" class="img-fluid" id="BanterImg"/>
                                    </div>
                                    <div class="col-sm-8">
                                        <p id="feedItemMessage">Oh YEAH Bruther</p>
                                    </div>
                                </div>
                            </article>
                        </li>
                    <%})%>
                    <!--POSTS END-->

                </ul>
            </div>
        </div>
    </div>

</div>


</html>